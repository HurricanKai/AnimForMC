<Window x:Class="_3D_thing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3D_thing"
		xmlns:System="clr-namespace:System;assembly=mscorlib"
		xmlns:h="http://helix-toolkit.org/wpf"
		mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.RenderTransform>
			<TransformGroup>
				<ScaleTransform/>
				<SkewTransform/>
				<RotateTransform Angle="-0.275"/>
				<TranslateTransform/>
			</TransformGroup>
		</Grid.RenderTransform>
		<h:HelixViewport3D x:Name="viewPort3d" ZoomExtentsWhenLoaded="true">
			<!-- Remember to add light to the scene -->
			<h:SunLight/>
			<h:GridLinesVisual3D Width="8" Length="8" MinorDistance="1" MajorDistance="1" Thickness="0.01"/>
			<ModelVisual3D x:Name="Models"/>
		</h:HelixViewport3D>
	</Grid>

</Window>
